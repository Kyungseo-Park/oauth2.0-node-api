{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "name": "API Debug",
        "request": "launch",
        "cwd": "${workspaceFolder}",
        "runtimeExecutable": "nodemon",
        "runtimeArgs": [
          "--inspect"
        ],
        "program": "${workspaceFolder}/src/index.js",
        "restart": true,
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "port": 9229
      }
    ]
  }
  